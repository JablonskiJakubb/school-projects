<?php
// Data for connecting to the MySQL server
$servername = "localhost";
$username = "root"; // Change if you are using a different user
$password = ""; // Add a password if required

// Retrieving data from the form
$dbname = $_POST['dbname'];
$field1 = $_POST['field1'];
$field2 = $_POST['field2'];

// Connecting to the MySQL server
$conn = new mysqli($servername, $username, $password);

// Checking the connection
if ($conn->connect_error) {
    die("Connection failed: " . $conn->connect_error);
}

// Creating a database
$sql = "CREATE DATABASE $dbname";
if ($conn->query($sql) === TRUE) {
    echo "Database '$dbname' has been created.<br>";
} else {
    die("Error creating database: " . $conn->error);
}

// Connecting to the newly created database
$conn->select_db($dbname);

// Creating a table
$tableName = "moja_tabela";
$sql = "CREATE TABLE $tableName (
    id INT(6) UNSIGNED AUTO_INCREMENT PRIMARY KEY,
    $field1 VARCHAR(255) NOT NULL,
    $field2 VARCHAR(255) NOT NULL
)";
if ($conn->query($sql) === TRUE) {
    echo "Table '$tableName' has been created in the database '$dbname'.";
} else {
    die("Error creating table: " . $conn->error);
}

// Closing the connection
$conn->close();
?>
