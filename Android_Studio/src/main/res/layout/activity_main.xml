<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="8dp"
        app:cardCornerRadius="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <!-- PIERWSZE ZDJĘCIE + RATING -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                android:src="@drawable/auto_1"/>

            <RatingBar
                android:id="@+id/rating1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:rating="0"
                android:numStars="4"
                android:stepSize="0.5"
                android:scaleX="0.5"
                android:scaleY="0.5"
                android:layout_marginTop="8dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">
                <Button
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:backgroundTint="#A61B16"
                    android:layout_marginRight="5dp"
                    android:text="↓"
                    android:id="@+id/btnDown1">
                </Button>

                <Button
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:backgroundTint="#16A627"
                    android:layout_marginLeft="5dp"
                    android:textSize="20dp"
                    android:text="↑"
                    android:id="@+id/btnUp1"
                    >
                </Button>
            </LinearLayout>
        </LinearLayout>

        <!-- DRUGIE ZDJĘCIE + RATING -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                android:src="@drawable/auto_2"/>

            <RatingBar
                android:id="@+id/rating2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:rating="0"
                android:numStars="4"
                android:stepSize="0.5"
                android:scaleX="0.5"
                android:scaleY="0.5"
                android:layout_marginTop="8dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">
                <Button
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:backgroundTint="#A61B16"
                    android:layout_marginRight="5dp"
                    android:text="↓"
                    android:id="@+id/btnDown2">
                </Button>

                <Button
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:backgroundTint="#16A627"
                    android:layout_marginLeft="5dp"
                    android:textSize="20dp"
                    android:text="↑"
                    android:id="@+id/btnUp2"
                    >
                </Button>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="8dp"
        app:cardCornerRadius="16dp"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <!-- PIERWSZE ZDJĘCIE + RATING -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/auto_3"/>

                <RatingBar
                    android:id="@+id/rating3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:rating="0"
                    android:numStars="4"
                    android:stepSize="0.5"
                    android:scaleX="0.5"
                    android:scaleY="0.5"
                    android:layout_marginTop="8dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">
                    <Button
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:backgroundTint="#A61B16"
                        android:layout_marginRight="5dp"
                        android:text="↓"
                        android:id="@+id/btnDown3">
                    </Button>

                    <Button
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:backgroundTint="#16A627"
                        android:layout_marginLeft="5dp"
                        android:textSize="20dp"
                        android:text="↑"
                        android:id="@+id/btnUp3"
                        >
                    </Button>
                </LinearLayout>
            </LinearLayout>

            <!-- DRUGIE ZDJĘCIE + RATING -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/auto_4"/>

                <RatingBar
                    android:id="@+id/rating4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:rating="0"
                    android:numStars="4"
                    android:stepSize="0.5"
                    android:scaleX="0.5"
                    android:scaleY="0.5"
                    android:layout_marginTop="8dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">
                    <Button
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:backgroundTint="#A61B16"
                        android:layout_marginRight="5dp"
                        android:text="↓"
                        android:id="@+id/btnDown4">
                    </Button>

                    <Button
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:backgroundTint="#16A627"
                        android:layout_marginLeft="5dp"
                        android:textSize="20dp"
                        android:text="↑"
                        android:id="@+id/btnUp4"
                        >
                    </Button>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>